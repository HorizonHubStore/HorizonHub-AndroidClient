<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.horizonhub_androidclient.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_gamePostFragment"
            app:destination="@id/gamePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamePostFragment"
        android:name="com.example.horizonhub_androidclient.fragments.GamePostFragment"
        android:label="gamePostFragment"
        tools:layout="@layout/fragment_game_post">
    </fragment>
    <fragment
        android:id="@+id/allPostsFragment"
        android:name="com.example.horizonhub_androidclient.fragments.AllPostsFragment"
        android:label="allPostsFragment"
        tools:layout="@layout/fragment_all_posts">
    </fragment>

</navigation>